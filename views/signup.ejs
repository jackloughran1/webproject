<%- include("top") %>

<!--Signup card-->
  <div class="container-image" id="login">
    <div class="container-fluid">
      <div class="row justify-content-center">
        <div class="col-sm-10 col-md-8 col-lg-6">
          <div class="card mb-4 mt-4 mx-auto" id="signup-card">
            <div class="card-header mb-3 text-center">
              <h5 class="display-6">Create your account</h5>
              <p class="description">Fill in the form below to get started</p>
              <div class="mylogo">
                <a href="/">
                  <img class="logo" src="/images/deezer-round-line-color-icon.svg" width="100" height="100"
                    alt="Logo for Stack Of Wax">
                </a>
              </div>
            </div>
            <div class="card-body">
              <form action="/signup" method="POST">
                <div class="form-group form-control-lg">
                  <label for="firstName">First Name*</label>
                  <input type="text" class="form-control" id="firstName" name="firstNameField" required>
                </div>
                <div class="form-group form-control-lg">
                  <label for="lastName">Last Name*</label>
                  <input type="text" class="form-control" id="lastName" name="lastNameField" required>
                </div>
                <div class="form-group form-control-lg">
                  <label for="userName">User Name*</label>
                  <input type="text" class="form-control" id="userName" name="userNameField" required>
                </div>
                <div class="form-group form-control-lg">
                  <label for="email">Email*</label>
                  <input type="email" class="form-control" id="email" name="emailField" required>
                </div>
                <div class="form-group form-control-lg">
                  <label for="signupPassword">Password*</label>
                  <input type="password" class="form-control" id="signupPassword" name="passwordField" required>
                </div>
                <div class="form-group form-control-lg">
                  <label for="confirmPassword">Confirm Password*</label>
                  <input type="password" class="form-control" id="confirmPassword" name="confirmPasswordField" required>
                </div>
                

                <div class="form-group form-control-lg">
                  <label for="profileURL">Profile Photo URL*</label>
                  <input type="text" class="form-control" id="profileURL" name="profilePhotoURL" required>
                </div>

                <div class="form-group col-8">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck" required>
                    <label class="form-check-label" for="gridCheck">
                      * Tick to agree to all terms and conditions
                    </label>
                  </div>
                </div>
                <div class="d-grid gap-2 col-6 mx-auto mt-4 mb-4">
                  <button type="submit" class="btn btn-success d-block mx-auto mt-4">Sign Up</button>
                </div>
              </form>
              <div class="card-footer text-center mt-4">
                Already a StackOfWax User! <a href="/login" class="text-decoration-none text-success">Login here!</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>