<%- include("top") %>

  <div class="container-image" id="login">
    <div class="container-fluid">
      <div class="row justify-content-center">
        <div class="col-sm-10 col-md-8 col-lg-6">
          <div class="card  ">
            <div class="card-header text-center">
              <div class="mylogo mt-2">
                <a href="/">
                  <img class="logo" src="/images/deezer-round-line-color-icon.svg" width="100" height="100"
                    alt="Logo for Stack Of Wax">
                </a>
              </div>
              <br>
              <h3>Login</h3>
            </div>
            <div class="card-body">
              <form action="/login" method="POST">
                <div class="row mb-5 mt-5">
                  <label for="inputEmail3" class=" col-form-label"><b>Email</b></label>
                  <div class="col-sm-12">
                    <input type="email" class="form-control" id="inputEmail3" name="emailField">
                  </div>
                </div>
                <div class="row mb-5">
                  <label for="inputPassword3" class="col-form-label"><b>Password</b></label>
                  <div class="col-sm-12">
                    <input type="password" class="form-control" id="inputPassword3 " name="passwordField">
                  </div>
                </div>
                <div class="d-grid gap-2 col-6 mx-auto mt-4 mb-4">
                  <button type="submit" class="btn btn-success">Login</button>
                </div>
              </form>
            </div>
            <div class="card-footer text-center mb-4">
              <p class="small mb-2 mt-2 pb-lg-4"><a class="text-success" href="#">Forgot password?</a></p>
              <p> Not a StackOfWax User! <a href="/signup" class="text-decoration-none text-success">Register Now!</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>